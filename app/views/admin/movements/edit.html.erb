<h1>Edit Movement</h1>

<%= form_for :movement, url: admin_movement_path, method: :put do |f| %>
  <div class="row">
    <label>Number</label>
    <%= f.text_field :number, class: "form-control", disabled: true %>
  </div>
  <div class="row">
    <label>Date</label>
    <%= f.text_field :date, class: "form-control", disabled: true %>
  </div>
  <div class="row">
    <label>Amount</label>
    <%= f.text_field :amount, class: "form-control", disabled: true %>
  </div>
  <div class="row">
    <label>IBAN</label>
    <%= f.text_field :iban, class: "form-control", disabled: true %>
  </div>
  <div class="row">
    <label>Communication</label>
    <%= f.text_field :communication, class: "form-control", disabled: true %>
  </div>
  <div class="row">
    <label>Type</label>
    <%= select_tag(
      :movement_type,
      options_for_select(Movement.movement_type_options, @movement.movement_type),
      class: "form-control"
    )%>
  </div>
  <hr>
  <%= f.submit "Update", class: "btn btn-primary" %>
<% end %>
