  <% if @movement.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@movement.errors.count, "error") %> prohibited this movement from being saved:</h2>

      <ul>
      <% @movement.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <label>Number</label>
    <%= f.text_field :number, class: "form-control", disabled: @movement.persisted? %>
  </div>
  <div class="row">
    <label>Date</label>
    <%= f.date_field :date, class: "form-control", disabled: @movement.persisted? %>
  </div>
  <div class="row">
    <label>Amount</label>
    <%= f.text_field :amount, class: "form-control", disabled: @movement.persisted? %>
  </div>
  <div class="row">
    <label>IBAN</label>
    <%= f.text_field :iban, class: "form-control", disabled: @movement.persisted? %>
  </div>
  <div class="row">
    <label>Communication</label>
    <%= f.text_area :communication, class: "form-control", disabled: @movement.persisted? %>
  </div>
  <div class="row">
    <label>Type</label>
    <%= f.select(
      :movement_type,
      Movement.movement_type_options,
      {},
      class: "form-control"
    )%>
  </div>
  <div class="row">
    <label>Custom Label</label>
    <%= f.text_field :custom_label, class: "form-control" %>
  </div>
